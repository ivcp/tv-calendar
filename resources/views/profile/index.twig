{% extends 'layout.twig' %} {% block content %}{% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags("profile") }}
{% endblock %}
<section
  class="mt-4 lg:mt-2 mb-4 mx-2 lg:mx-0 flex flex-col gap-2 lg:flex-row lg:items-start"
>
  <div class="grow flex flex-col gap-10">
    <div
      class="navbar gap-4 flex-col lg:flex-row lg:justify-between lg:py-4 lg:px-20 lg:bg-base-200 lg:h-20 lg:rounded-lg"
    >
      <h1
        class="block text-xl font-bold uppercase lg:max-w-[80ch] lg:overflow-hidden lg:text-ellipsis lg:whitespace-nowrap"
      >
        Profile/Settings
      </h1>
      <div>
        <div class="flex gap-2 items-center">
          <p>{{ email }}</p>
          {% if verified %}
          <div class="tooltip" data-tip="Verified">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z"
              />
            </svg>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="mx-auto flex flex-col gap-4">
      {% if not verified %}
      <div class="flex items-center justify-end gap-4 pb-4 border-b">
        <p class="">Didn't receive the verification email?</p>
        <button
          id="email-resend"
          data-email="{{ email }}"
          class="btn btn-outline rounded-lg"
        >
          Resend
        </button>
      </div>
      {% endif %} {% if passwordSet %}
      <div class="flex items-center justify-end gap-4 pb-4 border-b">
        <p class="">Change your password</p>
        <a
          href="/update-password"
          class="btn btn-outline btn-primary rounded-lg self-center"
          >Update password</a
        >
      </div>
      {% endif %}
      <div class="flex items-center justify-end gap-4">
        <p class="">Delete account</p>
        <button
          id="delete-account"
          class="btn btn-outline btn-secondary rounded-lg self-center"
        >
          Delete account
        </button>
      </div>
    </div>
  </div>
</section>
{% endblock %}
