<div id="pagination" class="join self-center mt-4 mb-6">
  {% set queryArr = pagination | filter((v,k) => k != 'totalPages' and k !=
  'showCount') %} {% set prevPage = queryArr | map((v, k) => k == 'page' ?
  "page=#{v > 1 ? v - 1}" : "#{k}=#{v}" ) | join('&') %} {% set nextPage =
  queryArr | map((v, k) => k == 'page' ? "page=#{v + 1}" : "#{k}=#{v}" ) |
  join('&') %} {% set url = current_url() %}
  <a
    class="join-item btn {{ pagination.page <= 1 ? 'btn-disabled' }}"
    href="{{ url }}?{{ prevPage }}"
    >Â«</a
  >
  <button class="join-item btn">Page {{ pagination.page }}</button>
  <a
    id="next-page-btn"
    class="join-item btn {{ pagination.totalPages == pagination.page ? 'btn-disabled' }}"
    href="{{ url }}?{{ nextPage }}"
    >Â»</a
  >
</div>
